<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:text="@string/hello_blank_fragment" />

    <LinearLayout
        android:id="@+id/title_container"
        android:layout_width="410dp"
        android:layout_height="166dp"
        android:background="#FF0000"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="top|center_horizontal"
        android:textColor="#FFFFFF">

        <TextView
            android:id="@+id/tittle_home"
            android:layout_width="330dp"
            android:layout_height="89dp"
            android:fontFamily="sans-serif"
            android:text="@string/conectando_con_la_ayuda_app_directorio_de_emergencias"
            android:textSize="24sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="565dp"
        android:layout_gravity="bottom"
        android:fadingEdge="vertical"
        android:focusableInTouchMode="false"
        android:hapticFeedbackEnabled="false"
        android:keepScreenOn="false"
        android:rotationX="0">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/btn_policia"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_policia" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/btn_bomberos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_bomberos" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/btn_CruzRoja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_cruzroja" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/btn_Ambulancia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_ambulancia" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</FrameLayout>
