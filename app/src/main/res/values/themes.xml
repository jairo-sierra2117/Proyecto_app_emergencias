<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppEmergencias" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item> <!-- este color se le aplica al item menu cuando este seleccionado, es por el navigation-->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- estilo de la barra de navegacion o navbar-->
    <style name="BottomNavigation">
        <item name="android:background">@color/white</item>
        <item name="itemTextColor">@color/black</item>
    </style>

        <!-- Definir un estilo -->
    <style name="ButtonPressedStyle">
        <item name="android:background">@color/black</item> <!-- Aplicar el color definido -->
    </style>


</resources>